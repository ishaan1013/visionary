generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(cuid())
  email   String   @unique
  name    String?
  folders Folder[]
}

model Folder {
  id        String     @id @default(cuid())
  name      String
  documents Document[]
  user      User       @relation(fields: [userId], references: [id])
  userId    String
}

model Document {
  id       String @id @default(cuid())
  title    String
  content  String
  folder   Folder @relation(fields: [folderId], references: [id])
  folderId String
}
